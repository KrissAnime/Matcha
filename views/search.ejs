<% include partials/head %>
<header>
        <%- include('partials/header', {session: session}); %>
</header>

<div class="search_options">
    <form action="" method="GET">
        <input type="number" id="low_age" name="low_age" placeholder="Min-Age" min="18" max="60">
        <input type="number" id="max_age" name="max_age" placeholder="Max-Age" min="18" max="60">
        Rating <select name="rating_select">
            <option></option>
            <option>0-1</option>
            <option>1-2</option>
            <option>2-3</option>
            <option>3-4</option>
            <option>4-5</option>
        </select>
        Distance <select name="distance_select">
            <option></option>
            <option>0-5 km</option>
            <option>6-10 km</option>
            <option>11-20 km</option>
            <option>20-50 km</option>
            <option>50+ km</option>
        </select>
        Tag1 <select name="tag1_select">
            <option></option>
            
            <% tags.forEach(function(tag){ %>
                <option><%= tag.tag_name %></option>
                <% }) %>
            </select>
            Tag2 <select name="tag2_select">
                <option></option>
                
                <% tags.forEach(function(tag){ %>
                    <option><%= tag.tag_name %></option>
                    <% }) %>
                </select>
                Tag3 <select name="tag3_select">
                    <option></option>
                    <% tags.forEach(function(tag){ %>
                        <option><%= tag.tag_name %></option>
                        <% }) %>
                    </select>
                    <button type="submit" class="btn btn-default">Match!</button>
                </form>
            </div>
            <% if (!matches){ %>
                <h5 style="color: white">You need at least 1 value to search</h5>
            <% } else { %>
                <div class='central_grid' l3 s2>
                        <% matches.forEach(function(user){ 
                            if (user.unique_key != "NULL"){ %>
                                <div>
                                    <div class="central_grid_item">
                                        <a href="../../profiles/<%= user.unique_key %>">
                                            <div class="central_grid_picture" style="background-image: url('/extra/profiles/<%= user.user_name %>/<%= user.profile %>')">
                                            </div>
                                        </a>
                                        <div id="user_name">
                                            <%= user.user_name %>
                                        </div>
                                        <div id="user_age">
                                            Age: <%= user.age %>
                                        </div>
                                        <div id="fame_rating_index">
                                            <% for (var i = 0; i < user.fame_rating; i++){ %>
                                                <i class="fas fa-star" style="color: maroon; width: 12px;"></i>
                                                <% } %>
                                                <% while (i < 5){ %>
                                                    <i class="far fa-star" stule="width: 12px;"></i>
                                                    <% i++ %>
                                                    <% } %>
                                                </div>
                                            </div>
                                        </div>
                                <% }}) %>
                                </div>
            <% } %>
            <% include partials/footer %>