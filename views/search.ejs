                    <% }) %>
                </select>
                Tag3 <select name="tag3_select">
                    <option></option>
                    <% tags.forEach(function(tag){ %>
                        <option><%= tag.tag_name %></option>
                        <% }) %>
                    </select>
                    <button type="submit" class="btn btn-default">Match!</button>
                </form>
