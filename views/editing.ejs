<% include partials/head %>
<header>
        <%- include('partials/header', {session: session}) %>
</header>

<div class="container" id="registration_box">
    <form action="" method="POST" id="registration_form" name="registration_form">
        <label>First Name:</label> <input type="text" maxlength="30" size="30" id="firstname" name="firstname" placeholder="First Name..."><br/>
        <label>Last Name:</label> <input type="text" maxlength="30" size="30" id="lastname" name="lastname" placeholder="Last Name..."><br/>
        <label>Email:</label> <input type="text" size="30" maxlength="50" id="email" name="email" placeholder="Email..."><br/>
        <label>Username:</label> <input type="text" size="30" maxlength="30" id="username" name="username" placeholder="Username..."><br/>
        <label>Password:</label> <input type="password" minlength=6 maxlength="30" size="30" id="password" name="password" placeholder="Password..."><br/>
        <label>Confirm Password:</label> <input type="password" minlength=6 maxlength="30" size="30" id="mpassword" name="mpassword" placeholder="Confirm Password..."><br/>
        <label>Age </label>
                <input  type="number" id="user_age" name="user_age" placeholder="Age" min="18" max="60"><br>
                <label>Gender </label>            
                <select id="gender" name="gender" style="float: right">
                    <option></option>
                    <option>Male</option>
                    <option>Female</option>
                </select><br>
                <label>Sexual Orientation </label>            
                <select id="sexual_pref" name="sexual_pref" style="float: right">
                    <option></option>
                    <option>Men</option>
                    <option>Women</option>
                    <option>Both</option>
                </select><br>
                <label>Tag 1 </label>
                <select id="tag1_select" name="tag1_select" style="float: right">
                <option></option>
                    <% tags.forEach(function(tag){ %>
                        <option><%= tag.tag_name %></option>
                    <% }) %>
                </select><br>
                <label>Tag 2 </label>
                <select id="tag2_select" name="tag2_select" style="float: right">
                <option></option>
                    <% tags.forEach(function(tag){ %>
                        <option><%= tag.tag_name %></option>
                    <% }) %>
                </select><br>
                <label>Tag 3 </label>
                <select id="tag3_select" name="tag3_select" style="float: right">
                <option></option>
                    <% tags.forEach(function(tag){ %>
                        <option><%= tag.tag_name %></option>
                    <% }) %>
                </select><br>
            <div class="form-group">
              <label>Bio </label>
              <input type="text" class="form-control" id="bio_box" placeholder="Say something about yourself">
            </div>
            <button type="submit" class="btn btn-primary" id="finish_this_button">Submit</button>
    </form>
