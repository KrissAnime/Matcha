<% include partials/head %>
<header>
        <% include partials/header %>
</header>

<div id="registration_box">
    <form action="" method="POST" id="registration_form" name="registration_form">
        <label>First Name:</label> <input type="text" size="30" id="firstname" name="firstname" placeholder="First Name..."><br/>
        <label>Last Name:</label> <input type="text" size="30" id="lastname" name="lastname" placeholder="Last Name..."><br/>
        <label>Email:</label> <input type="text" size="30" id="email" name="email" placeholder="Email..."><br/>
        <label>Username:</label> <input type="text" size="30" id="username" name="username" placeholder="Username..."><br/>
        <label>Password:</label> <input type="password" minlength=6 size="30" id="password" name="password" placeholder="Password..."><br/>
        <label>Confirm Password:</label> <input type="password" minlength=6 size="30" id="mpassword" name="mpassword" placeholder="Confirm Password..."><br/>
        <br/><button type="submit" id="login" style="margin-left: 100px;">Register</button>
    </form>
    <% if (error){ %>
        <% if (error == "missing") { %>
            Incomplete Form
            <% } %>
        <% if (error == "mismatch") { %>
            Passwords Do Not Match
            <% } %>
        <% if (error == "pass") { %>
            Check email for verification code
            <% } %>
        <% if (error == "exists") { %>
            Username or Email in use
            <% } %>
        <% } %>

</div>
            
    <% include partials/footer %>