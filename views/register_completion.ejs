<% include partials/head %>
<header>
        <%- include('partials/header', {session: session}); %>

</header>
    <div class="container" id="finish_registration">
        <form action="" method="POST">
                <label>Age </label>
                <input  type="number" id="user_age" name="user_age" placeholder="Age" min="18" max="60"><br>
                <label>Gender </label>            
                <select id="gender" name="gender" style="float: right">
                    <option></option>
                    <option>Male</option>
                    <option>Female</option>
                </select><br>
                <label>Sexual Orientation </label>            
                <select id="sexual_pref" name="sexual_pref" style="float: right">
                    <option></option>
                    <option>Men</option>
                    <option>Women</option>
                    <option>Both</option>
                </select><br>
                <label>Tag 1 </label>
                <select id="tag1_select" name="tag1_select" style="float: right">
                <option></option>
                    <% tags.forEach(function(tag){ %>
                        <option><%= tag.tag_name %></option>
                    <% }) %>
                </select><br>
                <label>Tag 2 </label>
                <select id="tag2_select" name="tag2_select" style="float: right">
                <option></option>
                    <% tags.forEach(function(tag){ %>
                        <option><%= tag.tag_name %></option>
                    <% }) %>
                </select><br>
                <label>Tag 3 </label>
                <select id="tag3_select" name="tag3_select" style="float: right">
                <option></option>
                    <% tags.forEach(function(tag){ %>
                        <option><%= tag.tag_name %></option>
                    <% }) %>
                </select><br>
            <div class="form-group">
              <label>Bio </label>
              <input type="text" class="form-control" id="bio_box" placeholder="Say something about yourself">
            </div>
                <input type="hidden" name="hidden_key" id="hidden_key" value="<%= hide_me %>">
                <input type="hidden" name="coord_long" id="coord_long" value="">
                <input type="hidden" name="coord_lat" id="coord_lat" value="">
            <button type="submit" class="btn btn-primary" id="finish_this_button">Submit</button>
            <% if (error){
                if (error.essentials){ %>
                    <h6>Essential data missing</h6>
                <% }
                if (error.tags){ %>
                    <h6>You need to choose 3 tags</h6>
                <% }
            } %>
        </form>
    </div>

    <input id="pac-input" class="controls" type="text" placeholder="Search Box">
    <div id="map"></div>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA4cJ_DoiJtOI8I0Hx7tMQ8VGbrl5ImH3E&libraries=places&callback=initAutocomplete" async defer></script>
    <script src="/js/registration.js"></script>

<% include partials/footer %>